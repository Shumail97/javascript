<head>
  <title>Replace Negative Numbers with 'Turing'</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h1>Replace Negative Numbers with 'Turing'</h1>
  <p id="result"></p>

  <script src="script.js"></script>
</body>
</html>

<!----Js--->

const x = [1, -4, 0, -1];

for (let i = 0; i < x.length; i++) {
  if (x[i] < 0) {
    x[i] = 'Turing';
  }
}

const resultElement = document.getElementById('result');
resultElement.textContent = `The modified array is: ${x}`;
