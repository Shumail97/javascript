<!---Js--->

const X = [2, -3, -1];

let max = X[0];

for (let i = 1; i < X.length; i++) {
  if (X[i] > max) {
    max = X[i];
  }
}

const resultElement = document.getElementById('result');
resultElement.textContent = `The maximum value of the array is: ${max}`;
